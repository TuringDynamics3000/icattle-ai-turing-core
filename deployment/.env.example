# Environment Variables for Australian Deployment
# iCattle.ai - MSA Grading System with Turing Protocol
#
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://admin:changeme123@postgres:5432/icattle_au
DB_PASSWORD=changeme123

# ============================================================================
# MARKET CONFIGURATION
# ============================================================================
MARKET=AU
REGION=Australia/Sydney

# ============================================================================
# AUSTRALIAN MARKET DATA APIs
# ============================================================================

# MLA (Meat & Livestock Australia) API
# Subscribe at: https://www.mla.com.au/marketing-beef-and-lamb/market-information/
MLA_API_KEY=your-mla-api-key-here
MLA_API_URL=https://api.mla.com.au/v1

# NLRS (National Livestock Reporting Service )
# Subscribe at: https://www.nlrs.com.au/
NLRS_API_KEY=your-nlrs-api-key-here
NLRS_API_URL=https://api.nlrs.com.au/v1

# EYCI (Eastern Young Cattle Indicator )
EYCI_API_KEY=your-eyci-api-key-here

# ============================================================================
# TURING PROTOCOL CONFIGURATION
# ============================================================================

# Enforce Turing Protocol (5 required headers)
TURING_PROTOCOL_ENFORCE=true

# Tenant ID validation (must start with AU- or QPIC-)
TURING_TENANT_PREFIX=AU-,QPIC-

# Geo-location validation (Australian coordinates)
TURING_GEO_LAT_MIN=-44
TURING_GEO_LAT_MAX=-10
TURING_GEO_LON_MIN=113
TURING_GEO_LON_MAX=154

# ============================================================================
# EVENT STREAMING (KAFKA)
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC_GRADING=icattle-au-grading-events
KAFKA_TOPIC_VALUATION=icattle-au-valuation-events
KAFKA_TOPIC_AUDIT=icattle-au-audit-log

# ============================================================================
# CACHING (REDIS)
# ============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=900

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# SECURITY
# ============================================================================

# API Authentication
API_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,https://app.icattle.com.au
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_MSA_GRADING=true
ENABLE_EYCI_PRICING=true
ENABLE_NLRS_PRICING=true
ENABLE_NLIS_VALIDATION=true
ENABLE_LPA_COMPLIANCE=true
ENABLE_EXPORT_DOCUMENTATION=false

# ============================================================================
# DEVELOPMENT/TESTING
# ============================================================================
DEBUG=false
TESTING=false
MOCK_MARKET_DATA=false
